{
  "manifest_version": 2,
  "name": "Pikurpoisons",
  "description": "This extension highlights toxic chemicals found in many cosmetic and cleaning products",
  "version": "0.1",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*"
      ],
      "js": [
        "LH2-content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "images/icon.png"
  }
}
